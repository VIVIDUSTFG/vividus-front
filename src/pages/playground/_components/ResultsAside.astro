---
import { url } from '../../../lib/data';

const { result } = Astro.props;
---

<div class="mb-4 lg:mb-0 h-full w-full">
  <div class="text-center flex flex-col h-full justify-center">
    <h3 class="mb-4 text-xl font-bold text-gray-900 dark:text-white">
      {
        result.contains_violence === true
          ? 'The video seems to contain violence in the following interval(s):'
          : 'The video seems to be safe!'
      }
    </h3>
    {
      result.contains_violence === true && (
        <ul id="violent-intervals" class="list-none list-inside text-lg text-gray-700 dark:text-gray-300">
          {result.violence_intervals_seconds.map((interval) => (
            <li>
              {interval[0]} - {interval[1]}
            </li>
          ))}
        </ul>
      )
    }
    <a
      href={url('playground')}
      class="mt-6 w-fit mx-auto text-white bg-primary-700 hover:bg-primary-800 focus:ring-4 focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800"
      >Take me back to the inference form!</a
    >
  </div>
</div>
